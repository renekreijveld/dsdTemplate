<?xml version="1.0" encoding="utf-8"?>

<extension version="3.3" type="template" client="site" method="upgrade">

	<name>Standaard Bootstrap 3 template</name>
	<creationDate>Feb-2016</creationDate>
	<author>DSD Business Internet</author>
	<copyright>Copyright Â© 2016 DSD Business Internet</copyright>
	<authorEmail>info@dsd.nu</authorEmail>
	<authorUrl>http://www.dsdbusinessinternet.nl</authorUrl>
	<version>1.0.0</version>
	<description><![CDATA[
		<h1>Standaard Bootstrap 3 template</h1>
		<p>Gebouwd door: <a href="http://www.gakijken.nl" target="_blank">DSD business internet</a></p>
	]]></description>

	<files>
		<folder>css</folder>
		<folder>fonts</folder>
		<folder>html</folder>
		<folder>icons</folder>
		<folder>images</folder>
		<folder>js</folder>
		<folder>less</folder>
		<folder>lib</folder>
		<filename>component.php</filename>
		<filename>error.php</filename>
		<filename>favicon.ico</filename>
		<filename>index.php</filename>
		<filename>logic.php</filename>
		<filename>offline.php</filename>
		<filename>template_preview.png</filename>
		<filename>template_thumbnail.png</filename>
		<filename>templateDetails.xml</filename>
	</files>

	<positions>
		<position>headstart</position>
		<position>headfinish</position>
		<position>bodystart</position>
		<position>bodyfinish</position>
		<position>navbarmenu</position>
		<position>navbarzoek</position>
		<position>afbeeldingen</position>
		<position>calltoaction</position>
		<position>hoofdmenu</position>
		<position>contentstart</position>
		<position>contentfinish</position>
		<position>zoeken</position>
		<position>logo</position>
		<position>menu</position>
		<position>topmenu</position>
		<position>links</position>
		<position>rechts</position>
		<position>debug</position>
	</positions>

	<config>
		<fields name="params">
			<fieldset name="template" label="Template instellingen">
				<field name="collapsable" type="radio" label="Collapsable gebruiken" class="btn-group btn-group-yesno" default="1">
					<option value="1">Ja</option>
					<option value="0">Nee</option>
				</field>
				<field name="fluid" type="radio" label="Fluid layout" class="btn-group btn-group-yesno" default="0">
					<option value="1">Ja</option>
					<option value="0">Nee</option>
				</field>
				<field name="sitewidth" class="" type="text" default="1170px" label="Site breedte (fluid)" />
				<field name="debuginfo" type="radio" label="Debug info toevoegen" class="btn-group btn-group-yesno" default="0">
					<option value="1">Ja</option>
					<option value="0">Nee</option>
				</field>
			</fieldset>
		</fields>
	</config>

</extension>